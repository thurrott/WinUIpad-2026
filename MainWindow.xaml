<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUIpad.MainWindow" xmlns:local="using:WinUIpad"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Name="OuterGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Name="MainAppGrid" Grid.Row="0" Visibility="Visible" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Name="TitlebarGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Assets/t-pride-icon.png" Width="16" Height="16" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Column="1" Name="TitleTextBlock" Style="{StaticResource BodyStrongTextBlockStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextTrimming="Clip"
                           Text="{Binding FileName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Converter={StaticResource FileNameConverter}}" />
                <TextBlock Grid.Column="2" Name="NeedsToBeSavedTextBock" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Segoe Fluent Icons" Text="&#xE792;" Foreground="{StaticResource TextFillColorSecondaryBrush}"
                           Visibility="{x:Bind doc.TextHasChanged, Mode=OneWay}" ToolTipService.ToolTip="This document has unsaved changes" />
            </Grid>
            <Grid Grid.Row="1" Name="MenubarGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <MenuBar Grid.Column="0" HorizontalAlignment="Stretch">
                    <MenuBarItem Title="File" AccessKey="F">
                        <MenuFlyoutItem Name="NewMenu" Text="New" Click="FileOpMenu_Click" AccessKey="N">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="N" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="NewWindowMenu" Text="New window" Click="NewWindowMenu_Click" AccessKey="W">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="N" Modifiers="Control,Shift"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="OpenMenu" Text="Open" Click="FileOpMenu_Click" AccessKey="O">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="O" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="SaveMenu" Text="Save" Click="SaveMenu_Click" AccessKey="S">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="S" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="SaveAsMenu" Text="Save as" Click="SaveAsMenu_Click" AccessKey="A">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="S" Modifiers="Control,Shift" />
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Name="PageSetupMenu" Text="Page setup" Click="PageSetupMenu_Click" />
                        <MenuFlyoutItem Name="PrintMenu" Text="Print" Click="PrintMenu_Click" AccessKey="P">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="P" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Name="ExitMenu" Text="Exit" Click="ExitMenu_Click" AccessKey="X" />
                    </MenuBarItem>
                    <MenuBarItem Title="Edit" AccessKey="E">
                        <MenuFlyoutItem Name="UndoMenu" Text="Undo" Icon="Undo" Click="UndoMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="Z" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Name="CutMenu" Text="Cut" Icon="Cut" Click="CutMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="X" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="CopyMenu" Text="Copy" Icon="Copy" Click="CopyMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="C" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="PasteMenu" Text="Paste" Icon="Paste" Click="PasteMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="V" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="DeleteMenu" Text="Delete" Icon="Delete" Click="DeleteMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="Delete"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Name="SearchMenu" Text="Search with Bing" Click="SearchMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="E" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Name="FindMenu" Text="Find" Click="FindMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="F" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="FindNextMenu" Text="Find next" Click="FindNextMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="F3"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="FindPreviousMenu" Text="Find previous" Click="FindPreviousMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="F3" Modifiers="Shift"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="ReplaceMenu" Text="Replace" Click="ReplaceMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="H" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutItem Name="GoToMenu" Text="Go to" Click="GoToMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="G" Modifiers="Control"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Name="SelectAllMenu" Text="Select all" Click="SelectAllMenu_Click" />
                        <MenuFlyoutItem Name="TimeDateMenu" Text="Time/date" Click="TimeDateMenu_Click">
                            <MenuFlyoutItem.KeyboardAccelerators>
                                <KeyboardAccelerator Key="F5"/>
                            </MenuFlyoutItem.KeyboardAccelerators>
                        </MenuFlyoutItem>
                        <MenuFlyoutSeparator />
                        <MenuFlyoutItem Name="FontMenu" Text="Font" Click="FontMenu_Click"/>
                    </MenuBarItem>
                    <MenuBarItem Title="View" AccessKey="V">
                        <MenuFlyoutSubItem Name="ZoomMenu" Text="Zoom">
                            <MenuFlyoutItem Name="ZoomInMenu" Text="Zoom in" Click="ZoomInMenu_Click">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="Add" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Name="ZoomOutMenu" Text="Zoom out" Click="ZoomOutMenu_Click">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="Subtract" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Name="RestoreDefaultZoomMenu" Text="Restore default zoom" Click="RestoreDefaultZoomMenu_Click">
                                <MenuFlyoutItem.KeyboardAccelerators>
                                    <KeyboardAccelerator Key="Number0" Modifiers="Control"/>
                                </MenuFlyoutItem.KeyboardAccelerators>
                            </MenuFlyoutItem>
                        </MenuFlyoutSubItem>
                        <ToggleMenuFlyoutItem Name="StatusBarMenu" Text="Status bar" Click="StatusBarMenu_Click" />
                        <ToggleMenuFlyoutItem Name="WordWrapMenu" Text="Word wrap" Click="WordWrapMenu_Click" />
                    </MenuBarItem>
                </MenuBar>
                <Button Grid.Column="2" Name="SettingsButton" Height="32" Width="48" HorizontalAlignment="Right" Content="&#xE713;" FontFamily="Segoe Fluent Icons" BorderBrush="Transparent" Background="Transparent" Click="SettingsButton_Click" />
            </Grid>
            <TextBox Grid.Row="2" Name="TextBox1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,0,10,10" AllowDrop="True" AcceptsReturn="True" TextChanging="TextBox1_TextChanging" SelectionChanging="TextBox1_SelectionChanged" ContextMenuOpening="TextBox1_ContextMenuOpening"
                     Text="{x:Bind Path=doc.Contents, Mode=TwoWay}">
                <TextBox.Resources>
                    <Thickness x:Key="TextControlBorderThemeThicknessFocused">1,1,1,0</Thickness>
                    <Thickness x:Key="TextControlBorderThemeThickness">1,1,1,0</Thickness>
                </TextBox.Resources>
            </TextBox>
            <Grid Grid.Row="3" Name="StatusbarGrid" Height="24" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Name = "PositionText" Text="Ln 1, Col 1" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,-10,0,0"/>
                <TextBlock Grid.Column="1" Name = "CountText" Text="0 words" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,-10,0,0"/>
                <TextBlock Grid.Column="2" Name = "ZoomText" Text="100%" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,-10,0,0"/>
            </Grid>
        </Grid>
        <Grid Name="MainSettingsGrid" Grid.Row="0" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,5,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="650" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Style="{StaticResource NavigationBackButtonNormalStyle}" Name="BackButton" FontSize="16" FontFamily="Segoe Fluent Icons" Content="&#xE72B;" Margin="0,0,0,0" Background="Transparent" BorderBrush="Transparent" Click="BackButton_Click" />
                <Image Grid.Column="1" Grid.Row="0" Source="/Assets/t-pride-icon.png" Width="16" Height="16" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock Grid.Column="2" Grid.Row="0" Text="WinUIpad" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" />
                <Grid Grid.Column="3" Grid.Row="0" x:Name="SettingsCustomDragRegion" Background="Gray" HorizontalAlignment="Stretch" />
            </Grid>
            <ScrollViewer Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Settings" Style="{StaticResource TitleLargeTextBlockStyle}" Margin="50,40,50,0" />
                    <TextBlock Grid.Row="1" Text="Appearance" Style="{StaticResource BodyTextBlockStyle}" Margin="50,20,50,0" />
                    <Expander Grid.Row="2" IsExpanded="False" ExpandDirection="Down" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="50,10,50,0" HorizontalContentAlignment="Left" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <Expander.Header>
                            <Grid Height="75">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <FontIcon Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Glyph="&#xE790;" />
                                <TextBlock Grid.Column="1" Grid.Row="0" Text="App theme" Style="{StaticResource BodyTextBlockStyle}" Margin="20,20,0,0" />
                                <TextBlock Grid.Column="1" Grid.Row="1" Text="Select which app theme to display" Style="{StaticResource CaptionTextBlockStyle}" Margin="20,0,0,20" />
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <Grid HorizontalAlignment="Left">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <RadioButtons Name="ThemeRadioButtons" Grid.Row="0" MaxColumns="1" Margin="40,0,0,0" VerticalAlignment="Top">
                                    <RadioButton Name="LightRadioButton" Content="Light" Click="LightRadioButton_Click" />
                                    <RadioButton Name="DarkRadioButton" Content="Dark" Click="DarkRadioButton_Click" />
                                    <RadioButton Name="SystemRadioButton" Content="Use system setting" Click="SystemRadioButton_Click" />
                                </RadioButtons>
                            </Grid>
                        </Expander.Content>
                    </Expander>
                    <Grid Grid.Row="3" CornerRadius="4" Padding="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{StaticResource ControlElevationBorderBrush}" BorderThickness="1,1,1,.5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="50,5,50,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <FontIcon Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Glyph="&#xE75B;" Margin="15,0,0,0" />
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="Status bar" Style="{StaticResource BodyTextBlockStyle}" Margin="20,20,0,0" />
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="Display a status bar at the bottom of the app window" Style="{StaticResource CaptionTextBlockStyle}" Margin="20,0,0,20" />
                        <ToggleSwitch Name="StatusBarToggle" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Right" Margin="0,0,-50,0" IsEnabled="True" Toggled="StatusBarToggle_Toggled" />
                    </Grid>
                    <TextBlock Grid.Row="4" Text="Text formatting" Style="{StaticResource BodyTextBlockStyle}" Margin="50,10,50,0" />
                    <Expander Grid.Row="5" Name="FontExpander" IsExpanded="False" ExpandDirection="Down" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="50,10,50,0" HorizontalContentAlignment="Stretch" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                        <Expander.Header>
                            <Grid Height="70">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <FontIcon Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Glyph="&#xE8D2;" />
                                <TextBlock Grid.Column="1" Grid.Row="0" Text="Font" Style="{StaticResource BodyTextBlockStyle}" Margin="20,25,0,25" />
                            </Grid>
                        </Expander.Header>
                        <Expander.Content>
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="15" Margin="40,-15,40,15" BorderThickness="0,0,0,1" BorderBrush="{StaticResource ControlElevationBorderBrush}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Family" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-15,5,10,0" />
                                    <ComboBox Grid.Row="0" Grid.Column="1" Name="FontFamilyComboBox" Width="200" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-15,0"
                                              ItemsSource="{Binding}" SelectionChanged="FontFamilyComboBox_SelectionChanged"  />
                                </Grid>
                                <Grid Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="15" Margin="40,-15,40,15" BorderThickness="0,0,0,1" BorderBrush="{StaticResource ControlElevationBorderBrush}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Style" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-15,5,10,0" />
                                    <ComboBox Name="FontStyleComboBox" Grid.Row="0" Grid.Column="1" PlaceholderText="Pick a font style" Width="200" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-15,0" 
                                              ItemsSource="{Binding}" SelectionChanged="FontStyleComboBox_SelectionChanged" />
                                </Grid>
                                <Grid Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Padding="15" Margin="40,-15,40,-15"  BorderThickness="0,0,0,1" BorderBrush="{StaticResource ControlElevationBorderBrush}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Size" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-15,5,10,0" />
                                    <ComboBox Name="FontSizeComboBox" Grid.Row="0" Grid.Column="1" PlaceholderText="Pick a font size" Width="200" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-15,0"
                                              ItemsSource="{Binding}" SelectionChanged="FontSizeComboBox_SelectionChanged" />
                                </Grid>
                                <Grid Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="15" Margin="40,20,40,0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Name="FontExampleTextBlock" Grid.Row="0" Grid.Column="0" Text="The sound of ocean waves calms my soul" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-15,5,10,0" />
                                </Grid>
                            </Grid>
                        </Expander.Content>
                    </Expander>
                    <Grid Grid.Row="6" CornerRadius="4" Padding="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{StaticResource ControlElevationBorderBrush}" BorderThickness="1,1,1,.5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="50,5,50,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <FontIcon Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Glyph="&#xE700;" Margin="15,0,0,0" />
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="Word wrap" Style="{StaticResource BodyTextBlockStyle}" Margin="20,20,0,0" />
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="Fit text within window by default" Style="{StaticResource CaptionTextBlockStyle}" Margin="20,0,0,20" />
                        <ToggleSwitch Name="WordWrapToggle" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Right" Margin="0,0,-50,0" Toggled="WordWrapToggle_Toggled" />
                    </Grid>
                    <TextBlock Grid.Row="7" Text="Spelling" Style="{StaticResource BodyTextBlockStyle}" Margin="50,10,50,0" />
                    <Grid Grid.Row="8" Height="75" CornerRadius="4" Padding="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{StaticResource ControlElevationBorderBrush}" BorderThickness="1,1,1,.5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="50,5,50,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <FontIcon Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Glyph="&#xF87B;" Margin="15,0,0,0" />
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="Spell check" Style="{StaticResource BodyTextBlockStyle}" Margin="20,25,0,25" />
                        <ToggleSwitch Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Right" Margin="0,0,-50,0" />
                    </Grid>
                    <Grid Grid.Row="9" CornerRadius="4" Padding="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{StaticResource ControlElevationBorderBrush}" BorderThickness="1,1,1,.5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="50,5,50,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <FontIcon Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Glyph="&#xE8FB;" Margin="15,0,0,0" />
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="Autocorrect" Style="{StaticResource BodyTextBlockStyle}" Margin="20,20,0,0" />
                        <TextBlock Grid.Column="1" Grid.Row="1" Text="Typos are automatically corrected when spell check is turned on" Style="{StaticResource CaptionTextBlockStyle}" Margin="20,0,0,20" />
                        <ToggleSwitch Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Right" Margin="0,0,-50,0" />
                    </Grid>
                    <Grid Grid.Row="10" Height="50" />
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
